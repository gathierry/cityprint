extends layout

block content
  #map.cityprintmap
  .row.marketing
    #meteo.col-sm-6.col-md-4
      .panel.panel-default.info
        .panel-heading
          h3.panel-title Meteo
        .panel-body
          #meteo-information.caption
            img#meteo-image(src='', height='50', alt='')
            span#temperature(style='font-size:25px;')
            p
            table
    .col-xs-6.col-md-4
      div
        img#city-image.img-circle(src='/images/city.jpg', alt='')
    .col-sm-6.col-md-4
      .panel.panel-default.info
        .panel-heading
          h3#city-information-title.panel-title
        #city-information-content.panel-body
  .row.marketing
    .col-xs-12.col-sm-6.col-md-8
      .panel.panel-default
        #percent-info.panel-heading
          h3#statistics.panel-title Statistics
        .panel-body
          .progress
            #city-percent.progress-bar(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='min-width: 2em;')
            p#city-percent-info
          .progress
            #country-percent.progress-bar(role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100', style='min-width: 2em;')
            p#country-percent-info
      #personalcomment
      div
        button.btn.btn-default.active(type='button', style='display: none;') Add a new comment
      .list-group
        a.list-group-item.disabled(href='#') Write
        textarea#comment-body(placeholder='Leave a comment')
        button.btn.btn-primary(type='button', disabled='disabled', style='float: right;') Comment
        button.btn.btn-default(type='button', style='float: right;') Cancel
    .col-xs-6.col-md-4
      .panel.panel-default.stat
        .panel-heading
          h3.panel-title Impression
        #comments.panel-body
    script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBEEzV_6S-FKNCUduQDJTd9LKdQIViEXgM&callback=initMap')

